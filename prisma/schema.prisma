generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int       @id @default(autoincrement())
  username   String    @unique
  email      String    @unique
  password   String
  created_at DateTime  @default(now())

  roles      UserRole[]
  projects   UserProjectAccess[]
  stages     UserStageAccess[]
  gptQueries GptIntegration[]
}

model Role {
  role_id   Int       @id @default(autoincrement())
  role_name String    @unique

  users     UserRole[]

  UserProjectAccess UserProjectAccess[]
}

model UserRole {
  user_id Int
  role_id Int

  user User @relation(fields: [user_id], references: [user_id])
  role Role @relation(fields: [role_id], references: [role_id])

  @@id([user_id, role_id])
}

model Project {
  project_id   Int       @id @default(autoincrement())
  project_name String
  description  String?
  created_at   DateTime  @default(now())

  stages       ProjectStage[]
  users        UserProjectAccess[]
}

model UserProjectAccess {
  user_id    Int
  project_id Int
  role_id    Int

  user    User    @relation(fields: [user_id], references: [user_id])
  project Project @relation(fields: [project_id], references: [project_id])
  role    Role    @relation(fields: [role_id], references: [role_id])

  @@id([user_id, project_id])
}

model ProjectStage {
  stage_id   Int      @id @default(autoincrement())
  stage_name String
  start_date DateTime
  end_date   DateTime?
  project_id Int

  project    Project @relation(fields: [project_id], references: [project_id])
  users      UserStageAccess[]
  gptQueries GptIntegration[]
}

model UserStageAccess {
  user_id    Int
  stage_id   Int
  access_level String

  user  User         @relation(fields: [user_id], references: [user_id])
  stage ProjectStage @relation(fields: [stage_id], references: [stage_id])

  @@id([user_id, stage_id])
}

model GptIntegration {
  gpt_session_id Int      @id @default(autoincrement())
  stage_id       Int
  user_id        Int
  query          String
  response       String
  timestamp      DateTime  @default(now())

  stage ProjectStage @relation(fields: [stage_id], references: [stage_id])
  user  User         @relation(fields: [user_id], references: [user_id])
}